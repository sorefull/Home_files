<% unless @posts.empty? %>
  <div class="container">
    <div class="row">
      <% @posts.each do |post| %>
        <div class="col-md-12 portfolio-item">
          <%= link_to post_path(post) do %>
            <%= image_tag post.image.show.url, class: "img-responsive", style: "border-radius:5px;" %>
          <h3>
            <%= post.title %>
          </h3>
          <% end %>
          <p class="post-meta">Post created by <%= link_to post.user.username %> on <%= post.created_at.strftime('%b %d, %Y') %></p>
        </div>
      <% end %>
    </div>
    <div class="row text-center">
      <div class="col-lg-12">
        <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
      </div>
    </div>
  </div>
<% else %>
  <%= render 'sorry/no_posts.html.erb' %>
<% end %>
