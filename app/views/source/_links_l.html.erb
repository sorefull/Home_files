<% if controller_name == 'posts' %>
  <% if action_name == 'show' or action_name == 'new' or action_name == 'about' %>
  <li><%= link_to 'All posts', posts_path, :style => "color:CornflowerBlue;" %></li>
  <% end %>
<% end %>
<% if controller_name == 'folders' %>
  <% if action_name == 'show' or action_name == 'new' or action_name == 'about' %>
    <li><%= link_to 'All folders', folders_path, :style => "color:CornflowerBlue;" %></li>
  <% end %>
<% end %>
<% if controller_name == 'contents' && action_name == 'new' %>
  <li><%= link_to 'All folders ', folders_path, :style => "color:CornflowerBlue;" %></li>
  <li><%= link_to '>' %></li>
  <li><%= link_to @folder.title, folder_path(@folder), :style => "color:CornflowerBlue;" %></li>
  <% end %>
